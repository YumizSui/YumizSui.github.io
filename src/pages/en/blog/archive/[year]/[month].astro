---
import BaseLayout from '../../../../../layouts/BaseLayout.astro';
import BlogSidebarEn from '../../../../../components/BlogSidebarEn.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.lang === 'en';
  });

  const archives = new Map<string, any[]>();
  posts.forEach((post) => {
    const year = post.data.pubDate.getFullYear();
    const month = post.data.pubDate.getMonth() + 1;
    const key = `${year}-${month}`;
    if (!archives.has(key)) {
      archives.set(key, []);
    }
    archives.get(key)?.push(post);
  });

  return Array.from(archives.entries()).map(([key, posts]) => {
    const [year, month] = key.split('-');
    return {
      params: { year, month },
      props: { posts, year: parseInt(year), month: parseInt(month) },
    };
  });
}

const { posts, year, month } = Astro.props;
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const monthNames = [
  'January', 'February', 'March', 'April', 'May', 'June',
  'July', 'August', 'September', 'October', 'November', 'December'
];

// Extract excerpt from post body if description is not provided
function getExcerpt(post: any): string {
  if (post.data.description) {
    return post.data.description;
  }
  if (!post.body) {
    return '';
  }
  const plainText = post.body
    .replace(/^---[\s\S]*?---/, '')
    .replace(/!\[.*?\]\(.*?\)/g, '')
    .replace(/\[([^\]]+)\]\([^\)]+\)/g, '$1')
    .replace(/#+\s/g, '')
    .replace(/\*\*([^*]+)\*\*/g, '$1')
    .replace(/\*([^*]+)\*/g, '$1')
    .replace(/`([^`]+)`/g, '$1')
    .replace(/```[\s\S]*?```/g, '')
    .replace(/\n+/g, ' ')
    .trim();
  return plainText.substring(0, 150) + (plainText.length > 150 ? '...' : '');
}

const title = `${monthNames[month - 1]} ${year}`;
const description = `Blog posts from ${monthNames[month - 1]} ${year}`;
---

<BaseLayout title={title} description={description} lang="en">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Main Content -->
      <div class="flex-1 lg:w-3/4">
        <h1 class="text-4xl font-bold mb-2">{monthNames[month - 1]} {year}</h1>
        <p class="text-gray-600 dark:text-gray-400 mb-8">{sortedPosts.length} post{sortedPosts.length !== 1 ? 's' : ''}</p>

      <div class="space-y-6">
        {sortedPosts.map((post) => {
          const slug = post.slug.startsWith('en/') ? post.slug.replace('en/', '') : post.slug;
          return (
          <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-6 hover:shadow-lg transition">
            <a href={`/en/blog/${slug}`} class="no-style">
              <h2 class="text-2xl font-bold mb-2 transition-colors hover:text-[#527784] dark:hover:text-[#8FA4A8]">
                {post.data.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
              <p class="text-gray-700 dark:text-gray-300">
                {getExcerpt(post)}
              </p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex gap-2 mt-4">
                  {post.data.tags.map((tag) => (
                    <a href={`/en/blog/tags/${tag}`} class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded transition">
                      {tag}
                    </a>
                  ))}
                </div>
              )}
            </a>
          </article>
          );
        })}
      </div>

        <div class="mt-12">
          <a href={`/en/blog/archive/${year}`} class="text-gray-700 dark:text-gray-300 hover:text-[#527784] dark:hover:text-[#8FA4A8] hover:underline mr-4 transition">
            ‚Üê Back to {year}
          </a>
          <a href="/en/blog" class="text-gray-700 dark:text-gray-300 hover:text-[#527784] dark:hover:text-[#8FA4A8] hover:underline transition">
            All posts
          </a>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-1/4">
        <BlogSidebarEn />
      </div>
    </div>
  </div>
</BaseLayout>
