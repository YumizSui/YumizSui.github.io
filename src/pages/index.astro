<script is:inline>
  // Auto-redirect to English page based on browser language (first visit only)
  (function() {
    const REDIRECT_KEY = 'lang-redirect-done';

    // Skip if already redirected before
    if (sessionStorage.getItem(REDIRECT_KEY)) {
      return;
    }

    // Check browser language
    const userLang = navigator.language || navigator.languages?.[0] || 'ja';

    // If not Japanese, redirect to English page
    if (!userLang.startsWith('ja')) {
      sessionStorage.setItem(REDIRECT_KEY, 'true');
      window.location.href = '/en/';
    }
  })();
</script>

